{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build with SQLite (Ubuntu)",
            "command": "/usr/bin/g++",   // <-- use g++
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "db.cpp",
                "user_function.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lsqlite3"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build task with SQLite support (C++)"
        }
    ],
    "version": "2.0.0"
}
